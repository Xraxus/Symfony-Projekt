{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.task_list'|trans }}
{% endblock %}

{% block body %}
    <div>
        <h1>{{ 'title.task_list'|trans }}</h1>
    </div>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'task.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.content'|trans, 'task.task_content') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.create_time'|trans, 'task.task_create_time') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.status'|trans, 'status.status_name') }}</th>
                <th colspan="3">{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for task in pagination.items %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.TaskContent }}</td>
                    <td>{{ task.TaskCreateTime|format_date('long') }}</td>
                    <td>{{ task.status.StatusName }}</td>
                    <td>
                        <a href="{{ url('task_show', {id: task.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('task_edit', {id: task.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('task_delete', {id: task.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="flexMarginRight">
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

            <a href="{{ url('task_create') }}" title="{{ 'action.create' | trans }}" >
                {{ 'action.create' | trans }}
            </a>
        </div>

    {% else %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'message.empty_list'|trans
        } %}
    {% endif %}
{% endblock %}