{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.note_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.note_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'note.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'note.note_title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.content'|trans, 'note.note_content') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.create_time'|trans, 'note.note_create_time') }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for note in pagination.items %}
                <tr>
                    <td>{{ note.id }}</td>
                    <td>{{ note.NoteTitle }}</td>
                    <td>{{ note.NoteContent }}</td>
                    <td>{{ note.CreateTime|format_date('long') }}</td>
                    <td>{{ note.category.CategoryName }}</td>
                    <td>
                        <a href="{{ url('note_show', {id: note.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}