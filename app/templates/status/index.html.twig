{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.status_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.status_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'status.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.name'|trans, 'status.status_name') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for status in pagination.items %}
                <tr>
                    <td>{{ status.id }}</td>
                    <td>{{ status.StatusName }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}